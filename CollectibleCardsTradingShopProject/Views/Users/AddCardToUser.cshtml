@model CollectibleCardsTradingShopProject.Models.UserCard
@{
    ViewData["Title"] = "Add Card to User";
}

<h1>Add Card to User</h1>

<h4>Assign a Card</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCardToUser" method="post">
            <input type="hidden" asp-for="UserId" value="@ViewData["UserId"]" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CardId" class="control-label"></label>
                <select asp-for="CardId" class="form-control" asp-items="ViewBag.CardId"></select>
                <span asp-validation-for="CardId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add Card" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
